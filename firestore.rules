// Simple: users can read their wallet and activity; writes only via functions
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /wallets/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false; // only functions write balances
      match /activity/{doc} {
        allow read: if request.auth != null && request.auth.uid == uid;
        allow write: if false;
      }
    }
  }
}